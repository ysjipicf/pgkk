<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pgkk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PgkkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="android.max_aspect" android:value="2.1" />

        <activity
            android:name=".ui.StartupAct"
            android:label="@string/app_name"
            android:theme="@style/start_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.news.NewsDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.caipu.SuspensionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.caipu.CaiPuDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.widget.ViewPagerActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".ui.video.VideoDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.video.PlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".ui.music.play.MusicPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Translucent" />
        <activity
            android:name=".ui.music.MusicDetialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.read.ReadDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>